.title_cover
  h2= "Agrupament Escolta i Guia"
  h1= "Cardenal Lluch"

#slides
  ul.slides-container
    - @covers.each do |cover|
      li
        = image_tag(cover.image_url, alt: cover.title, title: cover.title)
        .container
          h3= cover.title
  
  nav.slides-navigation
    = link_to raw("<i class='icon-chevron-sign-right'></i>"), "#", class: "next"
    = link_to raw("<i class='icon-chevron-sign-left'></i>"), "#", class: "prev"
